<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Life - Aadhav Manimurugan</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        overflow-x: hidden;
        background: #0a0a0a;
      }

      .container {
        position: relative;
        width: 100%;
        min-height: 100vh;
        overflow-x: hidden;
        overflow-y: auto;
        background: #0a0a0a;
      }

      .content {
        position: relative;
        z-index: 10;
        padding: 6rem 2rem 8rem;
        min-height: 100vh;
      }

      .masonry-wrapper {
        min-height: 950px;
        margin-bottom: 1rem;
        position: relative;
      }

      .footer-text {
        position: relative;
        z-index: 20;
        text-align: center;
        font-size: clamp(1.5rem, 3vw, 2.5rem);
        font-weight: 600;
        color: rgba(255, 255, 255, 0.8);
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        padding: 3rem 2rem;
        margin-top: 0;
        clear: both;
        display: block;
        width: 100%;
        background: transparent;
      }

      .page-title {
        font-size: clamp(2.5rem, 6vw, 4rem);
        font-weight: 900;
        color: white;
        text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        margin-bottom: 3rem;
        text-align: center;
      }

      .credit {
        position: fixed;
        bottom: 1.5rem;
        right: 1.5rem;
        font-size: 0.75rem;
        color: rgba(255, 255, 255, 0.6);
        text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
        z-index: 100;
        pointer-events: none;
        font-weight: 400;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <!-- Navigation Layer: Bubble Menu -->
      <BubbleMenu
        client:load
        logo="AM"
        menuBg="#ffffff"
        menuContentColor="#111111"
        useFixedPosition={true}
        items={[
          {
            label: 'home',
            href: '/',
            ariaLabel: 'Home',
            rotation: -8,
            hoverStyles: { bgColor: '#ff6b6b', textColor: '#ffffff' }
          },
          {
            label: 'about',
            href: '/about',
            ariaLabel: 'About',
            rotation: 8,
            hoverStyles: { bgColor: '#4ecdc4', textColor: '#ffffff' }
          },
          {
            label: 'projects',
            href: '/projects',
            ariaLabel: 'Projects',
            rotation: 8,
            hoverStyles: { bgColor: '#ffe66d', textColor: '#111111' }
          },
          {
            label: 'life',
            href: '/life',
            ariaLabel: 'Life',
            rotation: 8,
            hoverStyles: { bgColor: '#a8e6cf', textColor: '#111111' }
          },
          {
            label: 'connect',
            ariaLabel: 'Connect',
            rotation: -8,
            hoverStyles: { bgColor: '#ff8b94', textColor: '#ffffff' },
            subItems: [
              { label: 'email', href: 'mailto:your.email@example.com' },
              { label: 'github', href: 'https://github.com/Aadhavm10' },
              { label: 'linkedin', href: 'https://www.linkedin.com/in/aadhav-/' }
            ]
          }
        ]}
      />

      <!-- Content -->
      <div class="content">
        <h1 class="page-title">Life</h1>
        <div class="masonry-wrapper">
          <Masonry
            client:load
            items={items}
            ease="power3.out"
            duration={0.6}
            stagger={0.05}
            animateFrom="bottom"
            scaleOnHover={true}
            hoverScale={0.95}
            blurToFocus={true}
            colorShiftOnHover={false}
          />
        </div>
        <div class="footer-text">
          Just a few photos I like!
        </div>
      </div>

      <!-- Credit Text -->
      <div class="credit">
        Made with Svelte, Astro, and Three.js
      </div>
    </div>
  </body>
</html>
